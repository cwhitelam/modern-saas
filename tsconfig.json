{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@plugins/*": [
        "./src/plugins/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "next-env.d.ts",
    "src/**/*.tsx",
    "node_modules/nexus-prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
